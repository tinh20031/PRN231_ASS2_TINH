@model BussinessObject.DataAccess.Book

@{
    ViewBag.Title = "Delete Book";
}

<h2>Delete Book</h2>

<div>
    <h4>Are you sure you want to delete this book?</h4>
    <div>
        <h5>@Model.Title</h5>
        <dl class="row">
            <dt class="col-sm-2">Book ID</dt>
            <dd class="col-sm-10">@Model.BookId</dd>
            <dt class="col-sm-2">Type</dt>
            <dd class="col-sm-10">@Model.Type</dd>
            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">@Model.Price</dd>
            <dt class="col-sm-2">Published Date</dt>
            <dd class="col-sm-10">@Model.PublishedDate?.ToString("d")</dd>
            <!-- Add other properties as needed -->
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="BookId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
