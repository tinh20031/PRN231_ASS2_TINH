@model BussinessObject.DataAccess.Author

@{
    ViewBag.Title = "Delete Author";
}

<h2>Delete Author</h2>

<div>
    <h4>Are you sure you want to delete this author?</h4>
    <div>
        <h5>@Model.FirstName @Model.LastName</h5>
        <p>Phone: @Model.Phone</p>
        <p>Email: @Model.EmailAddress</p>
        <p>Address: @Model.Address, @Model.City, @Model.State, @Model.Zip</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="AuthorId" />
        <div>
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
